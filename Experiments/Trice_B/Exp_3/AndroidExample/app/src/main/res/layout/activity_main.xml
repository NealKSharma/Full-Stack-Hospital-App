<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:text="Cyclone Hospital"
        android:textColor="#fc0303"
        android:textSize="40dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/main_msg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:text="Patient / Doctor / Admin Portal"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/main_username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{{username}}"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:textSize="30dp"
        android:textColor="#000000">
    </TextView>


    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10sp"
        android:backgroundTint="#fc0303"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="20sp"></Button>

    <Button
        android:id="@+id/main_signup_btn"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:backgroundTint="#fc0303"
        android:text="Sign Up"
        android:textColor="#ffffff"
        android:textSize="20sp"></Button>


</androidx.appcompat.widget.LinearLayoutCompat>