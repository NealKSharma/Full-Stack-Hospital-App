<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/searchPrescriptions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search prescriptions"/>
        <Button
            android:id="@+id/btnNewPrescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New"/>
    </LinearLayout>

    <ListView
        android:id="@+id/prescriptionList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"/>

</LinearLayout>

<com.google.android.material.bottomnavigation.BottomNavigationView
    style="@style/MyBottomNav"
    android:id="@+id/bottomNav"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_gravity="bottom"
    app:itemIconSize="32dp"
    app:itemPaddingTop="0dp"
    app:itemPaddingBottom="0dp"
    android:background="@color/saint_red"
    app:itemIconTint="@color/bottom_nav_item_color"
    app:itemTextColor="@color/bottom_nav_item_color"
    app:labelVisibilityMode="unlabeled"
    app:menu="@menu/bottom_nav_menu"
    />

<com.project.saintcyshospital.MoreMenuLayout
    android:id="@+id/moreMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/inAppNotifBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/saint_red"
        android:visibility="gone"
        android:elevation="8dp">

        <TextView
            android:layout_marginTop="18dp"
            android:id="@+id/inAppNotifTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hospital update"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/inAppNotifBody"
            android:layout_marginBottom="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="You have a new notification."
            android:textSize="16sp"
            android:textColor="@android:color/white" />
    </LinearLayout>

</FrameLayout>








