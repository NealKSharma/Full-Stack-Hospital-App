<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="64dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="#F5F5F8"
        android:gravity="top">

        <LinearLayout
            android:id="@+id/chat_header"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@drawable/bg_cart_bar"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back"
            app:tint="@android:color/white"
            android:contentDescription="Back" />

            <ImageView
                android:id="@+id/chat_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_person"
            app:tint="@android:color/white" />

            <TextView
                android:id="@+id/chat_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Chat"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="1" />

            <ImageButton
                android:id="@+id/btn_call"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_phone"
            app:tint="@android:color/white"
            android:contentDescription="Call" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">


        <ListView
            android:id="@+id/chat_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="12dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="8dp"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_chat_input_pill"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <ImageButton
                android:id="@+id/btn_attach"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_attach"
            app:tint="#9E9E9E"
            android:contentDescription="Attach" />

            <EditText
                android:id="@+id/msg_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"
                android:hint="Send message"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E"
                android:padding="0dp"
                android:maxLines="4"
                android:inputType="textCapSentences|textMultiLine" />

            <ImageButton
                android:id="@+id/btn_send"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="2dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:rotation="-40"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_send"
            app:tint="@color/saint_red"
            android:contentDescription="Send" />

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        style="@style/MyBottomNav"
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        app:itemIconSize="32dp"
        app:itemPaddingTop="0dp"
        app:itemPaddingBottom="0dp"
        android:background="@color/saint_red"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav_menu"
        />

    <com.project.saintcyshospital.MoreMenuLayout
        android:id="@+id/moreMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/inAppNotifBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/saint_red"
        android:visibility="gone"
        android:elevation="8dp">

        <TextView
            android:layout_marginTop="18dp"
            android:id="@+id/inAppNotifTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hospital update"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/inAppNotifBody"
            android:layout_marginBottom="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="You have a new notification."
            android:textSize="16sp"
            android:textColor="@android:color/white" />
    </LinearLayout>

</FrameLayout>




