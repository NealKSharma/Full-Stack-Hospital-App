<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SaintCysHospital" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/saint_red</item>
        <item name="colorSecondary">@color/saint_red</item>
        <item name="colorAccent">@color/saint_red</item>            <!-- M2/compat -->
        <item name="colorControlActivated">@color/saint_red</item>
    </style>

    <style name="Theme.SaintCysHospital" parent="Base.Theme.SaintCysHospital" />

    <style name="ThemeOverlay.SaintCys.Popup" parent="ThemeOverlay.Material3">
        <item name="colorSurface">@color/popup_surface</item>
        <item name="colorOnSurface">@color/popup_on_surface</item>
        <item name="colorSurfaceVariant">@color/popup_surface_variant</item>
        <item name="colorOutline">@color/popup_outline</item>

        <item name="popupMenuStyle">@style/Widget.SaintCys.PopupMenu</item>
    </style>

    <style name="Widget.SaintCys.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="backgroundTint">@color/popup_surface</item>
        <item name="android:textColor">@color/popup_on_surface</item>
    </style>

    <style name="MyBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">28dp</item>
        <item name="itemPaddingTop">0dp</item>
        <item name="itemPaddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="itemActiveIndicatorStyle">@null</item>
    </style>
    <style name="ThemeOverlay.SaintCys.Pickers" parent="ThemeOverlay.Material3">
        <item name="colorPrimary">@color/saint_red</item>
        <item name="colorPrimaryContainer">@color/saint_red</item>
        <item name="colorSecondary">@color/saint_red</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>


</resources>